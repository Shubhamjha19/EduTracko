<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ParentDashboard">

    <!-- Main content layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/parentMaterialToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_theme"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:title="Parent dashboard"
            app:titleTextColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- First Part: User Info -->
        <LinearLayout
            android:id="@+id/parentUserInfoSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_corner_background"
            app:layout_constraintTop_toBottomOf="@id/parentMaterialToolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- User Photo and Geo-location -->
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/parentUserPhoto"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/profile"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircularImageView" />


                <TextView
                    android:id="@+id/parentGeoLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Geo-Location: Available"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/app_theme"
                    android:layout_marginTop="5dp" />
            </LinearLayout>

            <!-- User Details -->
            <LinearLayout
                android:id="@+id/parentUserDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/parentUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: Shreya Lande"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/parentUserClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class: TYCS"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/parentUserDept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dept: IT"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/parentUserRollNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Roll No: 25"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Second Part: Map View -->
        <FrameLayout
            android:id="@+id/parentMapView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_corner_background"
            app:layout_constraintTop_toBottomOf="@id/parentUserInfoSection"
            app:layout_constraintBottom_toTopOf="@id/parentStatsPanel">

            <fragment
                android:id="@+id/parentMapImage"
                android:layout_width="390dp"
                android:layout_height="250dp"
                android:layout_margin="5dp"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/parentUserInfoSection" />
        </FrameLayout>

        <!-- Third Part: Stats and Logs -->
        <LinearLayout
            android:id="@+id/parentStatsPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_corner_background"
            android:elevation="4dp"
            android:padding="16dp"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/parentMapView"
            app:layout_constraintBottom_toTopOf="@id/parentBottomNavigationView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/parentRealTimeStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Real-Time Data Summary"
                android:textSize="18sp"
                android:textColor="@color/app_theme"
                android:layout_marginBottom="8dp" />

            <!-- Stats -->
            <LinearLayout
                android:id="@+id/parentStatsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/parentStatusIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/checked"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/parentStudentLocationStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Status: Inside Geo-Fence"
                    android:textSize="16sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <TextView
                android:id="@+id/parentActivityLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Activity: Entered Geo-fence at 3:00 PM"
                android:textSize="14sp"
                android:textColor="#0A2150"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Bottom Navigation -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/parentBottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/app_theme"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/parentStatsPanel"
            app:layout_constraintVertical_bias="1.0"
            app:menu="@menu/parent_menu" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/parentNavView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/parents_nav_menu"
        app:itemIconTint="@color/app_theme"
        app:itemTextColor="@color/app_theme" />
</androidx.drawerlayout.widget.DrawerLayout>
