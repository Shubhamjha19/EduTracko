<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFF1F3"
    tools:context=".AskQueryScreenActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/query"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@color/app_theme"
        android:drawablePadding="8dp"
        android:padding="5dp"
        android:background="@drawable/edit_text_background"
        android:drawableTint="#474646"
        android:ems="10"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="15dp"
        android:hint="Name"
        android:inputType="textPersonName"
        />
  <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@color/app_theme"
        android:drawablePadding="8dp"
        android:drawableTint="#474646"
        android:ems="10"
      android:background="@drawable/edit_text_background"

      android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="15dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="8dp"/>
  <EditText
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@color/app_theme"
      android:background="@drawable/edit_text_background"
        android:drawablePadding="8dp"
        android:drawableTint="#474646"
        android:ems="10"
       android:layout_marginHorizontal="10dp"
       android:layout_marginVertical="15dp"
        android:hint="Number"
        android:inputType="number"
        android:padding="5dp"/>
  <EditText
        android:id="@+id/askurquery"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@color/app_theme"
        android:drawablePadding="8dp"
      android:background="@drawable/edit_text_background"
      android:drawableTint="#474646"
        android:ems="100"
       android:layout_marginHorizontal="10dp"
       android:layout_marginVertical="15dp"
        android:hint="Ask Your Question!"
        android:inputType="text"
      android:minLines="10"
        android:padding="8dp"/>

    <Button
        android:id="@+id/sendurquery"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Send Your Query!"
        android:textSize="20sp"
        android:backgroundTint="#595656"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"/>



</LinearLayout>



